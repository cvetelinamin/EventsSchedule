@model ReviewCreateInputModel
@using EventsSchedule.Web.ViewModels.Reviews

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>
<form asp-action="Add" id="add-review" class="add-comment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        @*<input asp-for="EventId" type="hidden" value="@Model.EventId">*@
        @*<input asp-for="EventId.Title" type="hidden" value="@Model.Recipe.Title">*@
        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <label asp-for="Comment" class="control-label">Comment:</label>
            <textarea asp-for="Comment" class="WYSIWYG form-control" cols="40" rows="3" spellcheck="true"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
    </fieldset>
    <div class="margin-top-30"></div>
    <button type="submit" class="button color big">Submit Review</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
