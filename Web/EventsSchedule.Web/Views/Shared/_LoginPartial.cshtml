@using Microsoft.AspNetCore.Identity
@using EventsSchedule.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <div class="nav-element">
                <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="GetLastEvents" title="Събития">Събития</a>
            </div>
        </li>
        <li>
            <div class="nav-element">
                <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="GetAll" title="Новини">Новини</a>
            </div>
        </li>
        <li class="nav-item">
            <div>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity.Name!</a>
            </div>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn text-dark bold">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <div>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </div>
        </li>
        <li class="nav-item">
            <div>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            </div>
        </li>
    }
</ul>
