@model EventsSchedule.Web.ViewModels.News.GetAllNews
@{
    ViewData["Title"] = "GetAll";
}

@foreach (var news in this.Model.News)
{
    <div class="card bg-dark text-white">
        <input type="hidden" name="Id" value="@news.Id" />
        <img class="card-img" src="..." alt="Card image">
        <div class="card-img-overlay">
            <h5 class="card-title">@news.Title</h5>
            <p class="card-text">@news.ShortContent</p>
            <time class="card-text" datetime="@news.CreatedOn.ToString("O")"></time>
        </div>


        <div class="px-4 pt-3">
            <a asp-controller="News" asp-action="NewsDetails" asp-route-eventId="@news.Id" class="btn btn-primary">Виж повече »</a>
        </div>
    </div>
}