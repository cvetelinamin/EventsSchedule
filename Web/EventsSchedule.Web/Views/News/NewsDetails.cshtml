@model EventsSchedule.Web.ViewModels.News.NewsViewModel

@{
    ViewData["Title"] = "NewsDetails";
}

<div asp-controller="News" asp-action="NewsDetails" asp-route-newsId="@Model.Id" class="row">
    <h2 class="center-block mt-4 mb-4">
        @Model.Title
    </h2>
    <hr />
    <img style="height: 60em; margin: auto" src="@Model.Image" alt="">
    <hr />
    <div class="mt-3">
        @Html.Raw(Model.SanitizedContent)
    </div>
    <div class="w-100" style="text-align: right;">
        <time class="text-muted" datetime="@Model.CreatedOn.ToString("O")"></time>
    </div>

    @if (this.User.IsInRole("Administrator"))
    {
        <div class="px-4 pt-3">
            <a asp-area="Administration" asp-controller="News" asp-action="Edit" asp-route-newsId="@Model.Id" class="btn btn-primary">Промени</a>
            <a asp-area="Administration" asp-controller="News" asp-action="Delete" asp-route-newsId="@Model.Id" class="btn btn-primary">Изтрий</a>
        </div>
    }
</div>