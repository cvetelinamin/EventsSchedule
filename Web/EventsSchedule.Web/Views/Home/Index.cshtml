@model EventsSchedule.Web.ViewModels.Home.IndexViewModel
<div id="header">
    <div id="menu">
        <form method="post" asp-controller="Home" asp-action="Index">
            <input type="hidden" name="EventCategoryId" value="@Model.EventCategoryId">
            <input type="hidden" name="CityId" value="@Model.CityId">
            <input type="hidden" name="TypicalAgeRangeSort" value="@Model.TypicalAgeRangeSort">
            <input type="hidden" name="TypicalAgeRangeSort" value="@Model.SearchString">
        </form>
    </div>


    @if (Model.EventCategoryId == null)
    {
        var topEvents = Model.TopEvents.Select(e => e.Image).ToArray();

        <!--== Site Description ==-->
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@topEvents[0]" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@topEvents[1]" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@topEvents[2]" alt="Third slide">
                </div>
            </div>
        </div>
    }
    else
    {
        <partial name="_EventsByCategory" />
    }
</div>

