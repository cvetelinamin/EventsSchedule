@model EventsSchedule.Web.ViewModels.Home.IndexViewModel
<div id="header">
    <div id="menu">
        <form method="post" asp-controller="Home" asp-action="Index">
            <input type="hidden" name="EventCategoryId" value="@Model.EventCategoryId">
            <input type="hidden" name="PriceSort" value="@Model.PriceSort">
            <input type="hidden" name="CityId" value="@Model.CityId">
            <input type="hidden" name="TypicalAgeRangeSort" value="@Model.TypicalAgeRangeSort">
        </form>
    </div>

    @if (Model.EventCategoryId == null)
    {
        var topEvents = Model.TopEvents.ToArray();

        if (topEvents.Length > 0)
        {
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img style="width: 100%; height: auto; overflow: hidden;" src="@topEvents[0].Image" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <a style="color: white;" class="display-1" asp-controller="Events" asp-action="EventById" asp-route-eventId="@topEvents[0].Id">
                                    @topEvents[0].Title
                                </a>
                                <p>@Html.Raw(topEvents[0].ShortDescription)</p>
                            </div>
                        </div>
                    @if (topEvents.Length > 1)
                    {
                        <div class="carousel-item">
                            <img style="width: 100%; height: auto; overflow: hidden;" src="@topEvents[1].Image" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <a style="color: white;" class="display-1" asp-controller="Events" asp-action="EventById" asp-route-eventId="@topEvents[1].Id">
                                    @topEvents[1].Title
                                </a>
                                <p>@Html.Raw(topEvents[1].ShortDescription)</p>
                            </div>
                        </div>
                    }
                    @if (topEvents.Length > 2)
                    {
                        <div class="carousel-item">
                            <img style="width: 100%; height: auto; overflow: hidden;" src="@topEvents[2].Image" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <a style="color: white;" class="display-1" asp-controller="Events" asp-action="EventById" asp-route-eventId="@topEvents[2].Id">
                                    @topEvents[2].Title
                                </a>
                                <p>@Html.Raw(topEvents[2].ShortDescription)</p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
        else
        {
            <img src="https://res.cloudinary.com/deni01vxb/image/upload/v1588191684/eventsturkeyantalya_fpfcfq.jpg" />
        }
    }
    else
    {
        <partial name="_EventsByCategory" />
    }
</div>

