@model EventsSchedule.Web.ViewModels.Events.EventViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div class="row">
    <div class="col-sm-8">
        @if (Model.IsAccessibleForFree == true)
        {
            <span class="badge badge-danger">Вход свободен</span>
        }
        <div>
            @Model.Performer
        </div>
        <div>
            @Model.DoorTime
        </div>
        <div>
            @Model.Organizer.Name
        </div>
        <div>
            @Model.EventCategory.Name
        </div>
        <div>
            @Model.NewDescription
        </div>
        <div>
            @Model.Price
        </div>

        <div class="px-4 pt-3">
            <button class="btn btn-primary" type="button" onclick="showAddCommentForm()" asp-area="" asp-controller="Reviews" asp-action="Add" asp-route-id="@Model.Id" title="Коментирай">Коментирай</button>
        </div>
        <div class="px-4 pt-3">
            <button class="btn btn-primary" type="button" asp-area="" asp-controller="Reviews" asp-action="ListLastReviews" asp-route-id="@Model.Id" title="Коментари">Коментари</button>
        </div>
    </div>

    <div class="container col-sm-4">
        @foreach (var review in this.Model.Reviews)
        {
            <div class="row">
                <div class="col-12 m-2">
                    <div class="card card-white post p-3">
                        <div class="post-heading">
                            <div class="float-left image m-3">
                                <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
                            </div>
                            <div class="float-left meta">
                                <div class="title h5">
                                    <a href="#"><b>@review.Username</b></a>
                                </div>
                                <h6 class="text-muted time">@review.CreatedOn</h6>
                                <div class="post-description m-3">
                                    <p>@review.SanitizedComment</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<div>
    <form asp-controller="Reviews" asp-action="Add" method="post" id="AddCommentForm" style="display: none">
        <input type="hidden" name="EventId" value="@this.Model.Id" />
        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Comment"></label>
            <textarea name="Comment" id="Comment" class="form-control"></textarea>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Добави коментар" />
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        function showAddCommentForm() {
            document.getElementById("AddCommentForm").style.display = "block";
        }
    </script>
}
