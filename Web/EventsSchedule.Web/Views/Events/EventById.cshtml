@model EventsSchedule.Web.ViewModels.Events.EventViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div>
    @if (Model.IsAccessibleForFree == true)
    {
        <span class="badge badge-danger">Вход свободен</span>
    }
    <div>
        @Model.Performer
    </div>
    <div>
        @Model.DoorTime
    </div>
    <div>
        @Model.Organizer.Name
    </div>
    <div>
        @Model.EventCategory.Name
    </div>
    <div>
        @Model.NewDescription
    </div>
    <div>
        @Model.Price
    </div>

    <div class="nav-element">
        <a class="about-us" asp-area="" asp-controller="Reviews" asp-action="Add" asp-route-id="@Model.Id" title="Оцени">Оцени</a>
    </div>
    <div class="nav-element">
        <a class="about-us" asp-area="" asp-controller="Reviews" asp-action="ListLastReviews" asp-route-id="@Model.Id" title="Коментари">Коментари</a>
    </div>
</div>
