@model EventsSchedule.Web.ViewModels.Organizers.OrganizerEditModel

@{
    ViewData["Title"] = "EditOrganizer";
}

<form method="post" asp-area="Administration" asp-controller="Organizers" asp-action="EditOrganizer" asp-route-eventId="@Model.EventId" asp-route-organizerId="@Model.Id" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
    <h2 class="p-2">Информация за организатора</h2>
    <div class="w-100">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactName"></label>
            <input asp-for="ContactName" class="form-control" />
            <span asp-validation-for="ContactName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WebSite"></label>
            <input asp-for="WebSite" class="form-control" />
            <span asp-validation-for="WebSite" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Промени събитие</button>
    </div>
</form>